    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Gestion des alertes temporisées
            setTimeout(() => {
                document.querySelectorAll('.alert').forEach(alert => alert.classList.remove('show'));
            }, 5000);

            // Prévisualisation de l'image avant upload
            const imageInput = document.querySelector('#service_image');
            if (imageInput) {
                imageInput.addEventListener('change', function(e) {
                    const file = e.target.files[0];
                    if (file) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            const preview = document.createElement('img');
                            preview.src = e.target.result;
                            preview.classList.add('current-image', 'mb-3');
                            const existingPreview = document.querySelector('.image-preview');
                            if (existingPreview) existingPreview.remove();
                            imageInput.after(preview);
                            preview.classList.add('image-preview');
                        };
                        reader.readAsDataURL(file);
                    }
                });
            }

            // Confirmation avant soumission
            const form = document.querySelector('form');
            form.addEventListener('submit', function(e) {
                if (!confirm('Voulez-vous vraiment enregistrer les modifications ?')) {
                    e.preventDefault();
                }
            });
        });
    </script>
