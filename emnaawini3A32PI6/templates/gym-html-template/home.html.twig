            --bleu-clair: #E6F0FA; /* Light blue matching background */
            --bleu-moyen: #4682B4; /* Mid-tone blue for balance */
            --gris: #2A2A2A; /* Dark gray for text */
            --jaune: #FFD700; /* Gold for standout elements */
            --shadow: 0 10px 30px rgba(30, 144, 255, 0.2); /* Subtle blue shadow */
            --shadow-dark: 0 8px 20px rgba(10, 77, 104, 0.3); /* Darker blue shadow */
        }
        body {
            font-family: 'Poppins', sans-serif;
