            background: rgba(0, 191, 255, 0.1); /* Subtle hover background */
            border-radius: 5px;
        }
        .dropdown-menu {
            background: var(--bleu-fonce);
            border: none;
            box-shadow: var(--shadow-dark);
        }
        .dropdown-item {
            color: var(--bleu-clair);
            font-weight: 400;
            transition: background 0.3s ease, color 0.3s ease;
        }
        .dropdown-item:hover {
            background: var(--bleu);
            color: #fff;
        }
        /* Buttons */
        .btn-primary {
            background: var(--bleu);
            border: none;
            padding: 12px 30px;
            font-family: 'Oswald', sans-serif;
            font-weight: 600;
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            color: #fff;
            border-radius: 8px;
            transition: all 0.3s ease;
            box-shadow: var(--shadow);
        }
        .btn-primary:hover {
            background: var(--bleu-vif);
            transform: translateY(-3px);
            box-shadow: 0 12px 25px rgba(0, 191, 255, 0.4);
        }
        .btn-light {
            background: var(--bleu-clair);
            color: var(--bleu-fonce);
            padding: 12px 30px;
            font-family: 'Oswald', sans-serif;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            border-radius: 8px;
            transition: all 0.3s ease;
            box-shadow: var(--shadow);
        }
        .btn-light:hover {
            background: var(--bleu-moyen);
            color: #fff;
            transform: translateY(-3px);
            box-shadow: 0 12px 25px rgba(70, 130, 180, 0.3);
        }
        /* Social Media Icons */
        .btn-square {
            background: var(--bleu-clair);
            color: var(--bleu-fonce);
            width: 40px;
            height: 40px;
            line-height: 40px;
            border-radius: 50%;
            transition: all 0.3s ease;
            box-shadow: var(--shadow);
        }
        .btn-square:hover {
            background: var(--bleu-vif);
            color: #fff;
            transform: scale(1.1);
            box-shadow: 0 8px 15px rgba(0, 191, 255, 0.4);
        }
        /* Contact Info */
        .bg-secondary h6 {
            font-family: 'Poppins', sans-serif;
            font-weight: 400;
            font-size: 0.95rem;
            margin: 0;
        }
        .bg-secondary i {
            color: var(--bleu-vif);
            font-size: 1.2rem;
            margin-right: 8px;
            transition: transform 0.3s ease;
        }
        .bg-secondary div:hover i {
            transform: scale(1.2);
        }
        /* Carousel */
        .carousel-caption {
            background: rgba(10, 77, 104, 0.75); /* Slightly more opaque */
            padding: 25px 50px;
            border-radius: 12px;
            box-shadow: var(--shadow-dark);
            animation: fadeInUp 1s ease;
        }
        .carousel-caption h5 {
            color: var(--jaune);
            font-family: 'Oswald', sans-serif;
            font-size: 1.6rem;
            font-weight: 600;
            letter-spacing: 1px;
            text-transform: uppercase;
            margin-bottom: 15px;
        }
        .carousel-caption h1 {
            color: var(--bleu-vif);
            font-family: 'Oswald', sans-serif;
            font-size: 3.8rem;
            font-weight: 700;
            letter-spacing: 2px;
            text-transform: uppercase;
            text-shadow: 3px 3px 8px rgba(0, 191, 255, 0.5);
            margin-bottom: 25px;
        }
        .carousel-control-prev, .carousel-control-next {
            width: 5%;
            opacity: 0.8;
            transition: opacity 0.3s ease;
        }
        .carousel-control-prev:hover, .carousel-control-next:hover {
            opacity: 1;
        }
        .carousel-control-prev-icon, .carousel-control-next-icon {
            filter: drop-shadow(0 0 8px var(--bleu-vif));
            width: 40px;
            height: 40px;
        }
        /* Animations */
        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(60px); }
            to { opacity: 1; transform: translateY(0); }
        }
        /* Responsive Adjustments */
        @media (max-width: 991px) {
            .navbar-brand h1 {
                font-size: 2rem;
            }
            .navbar-brand img {
                max-height: 60px;
            }
            .nav-link {
