    <!-- Customized Bootstrap Stylesheet -->
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">

    <!-- Custom Styles -->
    <style>
        :root {
            --bleu-vif: #00BFFF;
            --bleu: #1E90FF;
            --gris: #2A2A2A; /* Gris plus sombre pour un look pro */
            --jaune: #FFD700;
            --shadow: 0 10px 30px rgba(0, 191, 255, 0.3);
        }
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
            color: #333;
        }
        .bg-dark {
            background: var(--gris) !important;
            box-shadow: var(--shadow);
        }
        .bg-secondary {
            background: var(--jaune) !important;
            color: var(--gris);
        }
        .navbar-brand {
            transition: transform 0.3s ease;
        }
        .navbar-brand:hover {
            transform: scale(1.05);
        }
        .navbar-brand h1 {
            color: var(--bleu-vif);
            font-weight: 700;
            letter-spacing: 2px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        }
        .nav-link {
            color: #fff !important;
            font-weight: 500;
            transition: color 0.3s ease;
        }
        .nav-link:hover, .nav-link.active {
            color: var(--bleu-vif) !important;
        }
        .btn-primary {
            background: var(--bleu);
            border: none;
            padding: 12px 30px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            box-shadow: var(--shadow);
        }
        .btn-primary:hover {
            background: var(--bleu-vif);
            transform: translateY(-3px);
        }
        .carousel-caption {
            background: rgba(42, 42, 42, 0.7);
            padding: 20px 40px;
            border-radius: 10px;
            animation: fadeInUp 1s ease;
        }
        .carousel-caption h5 {
            color: var(--jaune);
            font-size: 1.5rem;
            font-weight: 600;
        }
        .carousel-caption h1 {
            color: var(--bleu-vif);
            font-size: 3.5rem;
            font-weight: 700;
            text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.3);
        }
        .carousel-control-prev, .carousel-control-next {
            filter: drop-shadow(0 0 10px var(--bleu));
        }
        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(50px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>

    {% block stylesheets %}{% endblock %}
</head>
<body>
    <!-- Header Start -->
    <div class="container-fluid bg-dark px-0 fixed-top">
        <div class="row gx-0">
            <div class="col-lg-3 bg-dark d-none d-lg-block">
                <a href="{{ path('app_home1') }}" class="navbar-brand w-100 h-100 m-0 p-0 d-flex align-items-center justify-content-center">
                    <img src="{{ asset('images/logo.png') }}" alt="HIVE Logo" style="max-height: 80px; margin-right: 15px; filter: drop-shadow(0 0 5px var(--bleu-vif));">
                    <h1 class="m-0 display-4 text-uppercase">HIVE</h1>
                </a>
            </div>
            <div class="col-lg-9">
                <div class="row gx-0 bg-secondary d-none d-lg-flex animate__animated animate__fadeInDown">
                    <div class="col-lg-7 px-5 text-start">
                        <div class="h-100 d-inline-flex align-items-center py-2 me-4">
                            <i class="fa fa-envelope text-primary me-2"></i>
                            <h6 class="mb-0">info@hivebybeeu.com</h6>
                        </div>
                        <div class="h-100 d-inline-flex align-items-center py-2">
                            <i class="fa fa-phone-alt text-primary me-2"></i>
                            <h6 class="mb-0">+012 345 6789</h6>
                        </div>
                    </div>
                    <div class="col-lg-5 px-5 text-end">
                        <div class="d-inline-flex align-items-center py-2">
                            <a class="btn btn-light btn-square rounded-circle me-2 animate__animated animate__pulse animate__infinite" href="#">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a class="btn btn-light btn-square rounded-circle me-2 animate__animated animate__pulse animate__infinite" href="#">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a class="btn btn-light btn-square rounded-circle me-2 animate__animated animate__pulse animate__infinite" href="#">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                            <a class="btn btn-light btn-square rounded-circle me-2 animate__animated animate__pulse animate__infinite" href="#">
                                <i class="fab fa-instagram"></i>
                            </a>
                            <a class="btn btn-light btn-square rounded-circle animate__animated animate__pulse animate__infinite" href="#">
                                <i class="fab fa-youtube"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <nav class="navbar navbar-expand-lg bg-dark navbar-dark p-3 p-lg-0 px-lg-5">
                    <a href="{{ path('app_home1') }}" class="navbar-brand d-block d-lg-none">
                        <img src="{{ asset('images/logo.png') }}" alt="HIVE Logo" style="max-height: 80px; margin-right: 15px; filter: drop-shadow(0 0 5px var(--bleu-vif));">
                        <h1 class="m-0 display-4 text-uppercase">HIVE</h1>
                    </a>
                    <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav mr-auto py-0">
                            <a href="{{ path('app_home1') }}" class="nav-item nav-link active">Home</a>
                            <a href="{{ path('app_about1') }}" class="nav-item nav-link">About</a>
                            <a href="{{ path('app_class') }}" class="nav-item nav-link">Classes</a>
                            <a href="{{ path('app_team1') }}" class="nav-item nav-link">Trainers</a>
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Pages</a>
                                <div class="dropdown-menu rounded-0 m-0">
                                    <a href="{{ path('app_blog1') }}" class="dropdown-item">Blog Grid</a>
                                    <a href="{{ path('app_detail1') }}" class="dropdown-item">Blog Detail</a>
                                    <a href="{{ path('app_testimonial') }}" class="dropdown-item">Testimonial</a>
                                </div>
                            </div>
                            <a href="{{ path('app_contact1') }}" class="nav-item nav-link">Contact</a>
                        </div>
                        <a href="#" class="btn btn-primary py-md-3 px-md-5 d-none d-lg-block">Join Us</a>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <!-- Header End -->

    <!-- Carousel Start -->
    <div class="container-fluid p-0 mb-5">
        <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="w-100" src="{{ asset('img/carousel-1.jpg') }}" alt="Build Your Strength" style="object-fit: cover; height: 100vh; filter: brightness(0.8);">
                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                        <div class="p-3" style="max-width: 900px;">
                            <h5 class="text-uppercase animate__animated animate__fadeIn">Best Fitness Experience</h5>
                            <h1 class="display-2 text-uppercase mb-md-4 animate__animated animate__zoomIn">Forge Your Body with HIVE</h1>
                            <a href="#" class="btn btn-primary py-md-3 px-md-5 me-3 animate__animated animate__bounceIn">Join Now</a>
                            <a href="{{ path('app_contact1') }}" class="btn btn-light py-md-3 px-md-5 animate__animated animate__bounceIn">Contact Us</a>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="w-100" src="{{ asset('img/carousel-2.jpg') }}" alt="Grow Stronger" style="object-fit: cover; height: 100vh; filter: brightness(0.8);">
                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                        <div class="p-3" style="max-width: 900px;">
                            <h5 class="text-uppercase animate__animated animate__fadeIn">Unleash Your Potential</h5>
                            <h1 class="display-2 text-uppercase mb-md-4 animate__animated animate__zoomIn">Strength Begins at HIVE</h1>
                            <a href="#" class="btn btn-primary py-md-3 px-md-5 me-3 animate__animated animate__bounceIn">Join Now</a>
                            <a href="{{ path('app_contact1') }}" class="btn btn-light py-md-3 px-md-5 animate__animated animate__bounceIn">Contact Us</a>
                        </div>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#header-carousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <!-- Carousel End -->

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="{{ asset('lib/easing/easing.min.js') }}"></script>
    <script src="{{ asset('lib/waypoints/waypoints.min.js') }}"></script>
    <script src="{{ asset('lib/counterup/counterup.min.js') }}"></script>
    <script src="{{ asset('lib/owlcarousel/owl.carousel.min.js') }}"></script>

    <!-- Template Javascript -->
    <script src="{{ asset('js/main.js') }}"></script>

    {% block javascripts %}{% endblock %}
</body>
</html>