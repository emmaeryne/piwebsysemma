                                        <dt class="col-sm-3 fw-bold"><i class="bi bi-tag me-2"></i>{{ 'nom'|trans|default('Nom') }}</dt>
                                        <dd class="col-sm-9">{{ type_abonnement.nom }}</dd>
                                        <dt class="col-sm-3 fw-bold"><i class="bi bi-info-circle me-2"></i>{{ 'description'|trans|default('Description') }}</dt>
                                        <dd class="col-sm-9">{{ type_abonnement.description|default('Aucune description disponible') }}</dd>
                                        <dt class="col-sm-3 fw-bold"><i class="bi bi-currency-euro me-2"></i>{{ 'prix'|trans|default('Prix') }}</dt>
                                        <dd class="col-sm-9">{{ type_abonnement.prix|number_format(2, ',', ' ') }} €</dd>
                                        <dt class="col-sm-3 fw-bold"><i class="bi bi-clock me-2"></i>{{ 'duree'|trans|default('Durée') }}</dt>
                                        <dd class="col-sm-9">{{ type_abonnement.dureeEnMois }} {{ 'mois'|trans|default('mois') }}</dd>
                                        <dt class="col-sm-3 fw-bold"><i class="bi bi-star me-2"></i>{{ 'premium'|trans|default('Premium') }}</dt>
                                        <dd class="col-sm-9">
                                            {% if type_abonnement.getIsPremium %}
                                                <span class="badge bg-success"><i class="bi bi-check me-1"></i>{{ 'Oui'|trans|default('Oui') }}</span>
                                            {% else %}
                                                <span class="badge bg-secondary"><i class="bi bi-x me-1"></i>{{ 'Non'|trans|default('Non') }}</span>
                                            {% endif %}
                                        </dd>
                                        <dt class="col-sm-3 fw-bold"><i class="bi bi-calendar-check me-2"></i>{{ 'reservation_count'|trans|default('Nombre de réservations') }}</dt>
                                        <dd class="col-sm-9">{{ reservationCount }}</dd>
                                    </dl>
                                </div>
                            </div>

                            <!-- Réservations -->
                            <div class="card mb-4">
                                <div class="card-body">
                                    <h5 class="card-title"><i class="bi bi-calendar-event me-2"></i>{{ 'title'|trans|default('Réservations associées') }}</h5>
                                    {% if reservations is not empty %}
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover">
                                                <thead class="table-dark">
                                                    <tr>
                                                        <th><i class="bi bi-hash me-1"></i>{{ 'reservation.id'|trans|default('ID') }}</th>
                                                        <th><i class="bi bi-calendar-event me-1"></i>{{ 'reservation.date_debut'|trans|default('Date de début') }}</th>
                                                        <th><i class="bi bi-calendar-event me-1"></i>{{ 'reservation.date_fin'|trans|default('Date de fin') }}</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {% for reservation in reservations %}
                                                        <tr>
                                                            <td>{{ reservation.id }}</td>
                                                            <td>{{ reservation.dateDebut ? reservation.dateDebut|date('d/m/Y') : '-' }}</td>
                                                            <td>{{ reservation.dateFin ? reservation.dateFin|date('d/m/Y') : '-' }}</td>
                                                        </tr>
                                                    {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    {% else %}
                                        <div class="alert alert-info text-center">
                                            <i class="bi bi-info-circle me-2"></i>{{ 'no_records'|trans|default('Aucune réservation associée') }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>

                            <!-- Boutons d'action -->
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_type_abonnement_index') }}" class="btn btn-secondary" data-bs-toggle="tooltip" title="{{ 'back'|trans|default('Retour à la liste') }}">
                                    <i class="bi bi-arrow-left me-2"></i>{{ 'back'|trans|default('Retour à la liste') }}
                                </a>
                                <a href="{{ path('app_type_abonnement_edit', {'id': type_abonnement.id}) }}" class="btn btn-primary" data-bs-toggle="tooltip" title="{{ 'edit'|trans|default('Modifier') }}">
